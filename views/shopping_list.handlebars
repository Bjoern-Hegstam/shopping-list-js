<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">

            <div class="shopping-list">
                <div class="shopping-list-header clearfix">
                    <span class="name">
                        {{shopping_list.name}}
                    </span>

                    <div class="shopping-list-btns">
                        <button type="button" class="btn btn-lg btn-success">
                            Add item
                        </button>
                    </div>
                </div>

                <ul class="shopping-list-items">
                    {{#each shopping_list.items}}
                        {{> shoppingListItem}}
                    {{/each}}
                </ul>
            </div>

        </div>
    </div>
</div>
