<div class="container">
    <div class="row">
        <div class="col-xs-12">

            <form action="/register" method="post">
                <fieldset class="form-group">
                    <label class="sr-only" for="usernameInput">Username</label>
                    <input type="test" class="form-control" id="usernameInput" placeholder="Username">
                </fieldset>

                <fieldset class="form-group">
                    <label class="sr-only" for="passwordInput">Password</label>
                    <input type="test" class="form-control" id="passwordInput" placeholder="Password">
                </fieldset>

                <fieldset class="form-group">
                    <label class="sr-only" for="emailInput">Email</label>
                    <input type="test" class="form-control" id="emailInput" placeholder="Email">
                </fieldset>

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
